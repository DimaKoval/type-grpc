{
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "target": "es5",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false
  }
}
